<%= title "Tracking Link #@tracking_link" %>

<%= breadcrumbs sites_path, @site, site_tracking_links_path(@site), @tracking_link %>

<table class="table table-bordered">
  <tr>
    <th class="col-sm-2">Link ID</th>
    <td><%= gicon "link" %> <%= @tracking_link.token %></td>
  </tr>
  <tr>
    <th>Medium</th>
    <td><%= @tracking_link.medium %></td>
  </tr>
  <tr>
    <th>Landing Page URL</th>
    <td><%= link_to @tracking_link.landing_page_url, @tracking_link.landing_page_url, target: "_blank" %></td>
  </tr>
  <tr>
    <th>Campaign</th>
    <td><%= @tracking_link.campaign %></td>
  </tr>
  <tr>
    <th>Source</th>
    <td><%= @tracking_link.source %></td>
  </tr>
  <tr>
    <th>Ad Content</th>
    <td><%= @tracking_link.ad_content %></td>
  </tr>
  <% if @tracking_link.cost %>
    <tr>
      <th>Cost</th>
      <td><%= number_to_currency @tracking_link.cost.amount %> (<%= @tracking_link.cost %>)</td>
    </tr>
  <% end %>
</table>

<div class="well well-sm">
  <label>For Google Adwords and Bing Ads:</label>
  <input type="text" class="form-control" value="<%= ENV['HTTP_HOST'] %>/r/<%= @tracking_link.token %>?keyword={keyword}">
</div>

<div class="well well-sm">
  <label>All other Ad Networks and Websites:</label>
  <input type="text" class="form-control" value="<%= ENV['HTTP_HOST'] %>/r/<%= @tracking_link.token %>">
</div>

<%= back site_tracking_links_path(@site) %>
<%= link_to gicon("pencil", "Edit"), edit_site_tracking_link_path(@site, @tracking_link), class: "btn btn-default" %>
<%= link_to gicon("trash", "Delete"), site_tracking_link_path(@site, @tracking_link), method: :delete, data: { confirm: "Are you sure you want to delete this tracking link?" }, class: "btn btn-danger" %>
