<%= page_title "Sites" %>

<%= link_to "New Site", new_site_path, class: "btn btn-primary new-site" if current_user.admin? %>

<% unless @sites.empty? %>
  <table class="table">
    <% @sites.each do |site| %>
      <tr>
        <td><%= gicon "stats" %> <%= link_to site, site %></td>
      </tr>
    <% end %>
  </table>
<% end %>
